# IdeaHub Docker Environment Configuration
# Copy this file to .env when using Docker Compose
# Usage: cp .env.docker.example .env

# Application
APP_NAME=IdeaHub
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

# Database (MySQL for production)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ideahub
DB_USERNAME=ideahub
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret
MYSQL_PORT=3306

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Broadcasting (Soketi/Pusher)
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http

# Mail (use log driver for development, configure SMTP for production)
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ideahub.local"
MAIL_FROM_NAME="${APP_NAME}"

# Seeding (set to true on first run to populate initial data)
SEED_DATABASE=false

# Soketi Port
SOKETI_PORT=6001

# Development Ports (for docker-compose.dev.yml)
VITE_PORT=5173
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
